<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_centered="false"
    app:rv_color="@color/colorPrimary"
    app:rv_rippleDuration="@integer/duration_ripple">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin16">

        <com.openDC.loclookup.view.custom.CustomTextView
            android:id="@+id/txt_choice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="@dimen/margin6"
            android:paddingTop="@dimen/margin6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_large" />

        <ImageView
            android:id="@+id/img_tick"
            android:layout_width="@dimen/margin30"
            android:layout_height="@dimen/margin30"
            android:layout_marginLeft="@dimen/margin10"
            android:src="@drawable/ic_tick" />
    </LinearLayout>
</com.andexert.library.RippleView>